{
  "id": "com.github.melange-app.plugin-status",
  "name": "Status",
  "version": "0.0.5",
  "description": "Publish small statuses.",
  "permissions": {
    "read-message": ["airdispat.ch/status/body"],
    "send-message": ["airdispat.ch/status/body"]
  },
  "tiles": {
    "status-updater": {
      "name": "Quick Status Updater",
      "description": "Quickly publish status updates at the top of your dashboard.",
      "view": "tile/tile.html",
      "click": true,
      "size": "100%x100"
    }
  },
  "viewers": {
    "default": {
      "view": "viewer/viewer.html",
      "type": ["airdispat.ch/status/body"]
    }
  },
  "hideSidebar": true,
  "author": {
    "name": "Hunter Leath",
    "email": "h@hunterleath.com"
  },
  "homepage": "http://airdispat.ch/plugins/status"
}
